@model WebSite.EndPoint.Models.ErrorViewModel

@{
    Layout = null;
    ViewData["Title"] = "خطا";
}
<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>خطا - @Model.StatusCode</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=VT323" rel="stylesheet">
    <link href="~/css/customdashboard.css" rel="stylesheet" />
</head>
<body class="body-Error">
    <main class="container-Error">
        <h1 class="h1-Size"><span class="bg-Span">Error - @Model.StatusCode</span></h1>
        <p class="p-Size"> خطایی رخ داده است، برای ادامه:</p>
        <p class="p-Size">
            * به صفحه اصلی بازگردید.<br />
            * یا به مدیر وب‌سایت تماس بگیرید
        </p>
        <p class="p-Size">
            <a class="text-btn" href="/home/index">صفحه اصلی</a>
        </p>
    </main>
</body>
</html>
