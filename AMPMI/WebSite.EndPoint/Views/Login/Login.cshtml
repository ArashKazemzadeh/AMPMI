@model WebSite.EndPoint.Models.AccountingViewModel.Login.LoginVM
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@if (ViewData["Error"] != null)
{
    <div class="alert alert-danger">
        @ViewData["Error"]
    </div>
}
<div class="wrapper default">
    <div class="container">
        <div class="row">
            <div class="main-content col-12 col-md-7 col-lg-5 mx-auto">
                <div class="account-box">
                    <div class="account-box-title text-right">ورود </div>
                    <div class="account-box-content">
                        <form action="/Login/Login" method="post" class="form-account">
                            <div class="form-account-title"> شماره موبایل</div>
                            <div class="form-account-row">
                                <label class="input-label"><i class="now-ui-icons users_single-02"></i></label>
                                <input asp-for=Mobile class="input-field" type="text" placeholder="شماره موبایل خود را وارد نمایید">
                                <span class="text-danger" asp-validation-for=Mobile></span>
                            </div>
                            <div class="form-account-title">
                                رمز عبور
                            </div>
                            <div class="form-account-row">
                                <label class="input-label">
                                    <i class="now-ui-icons ui-1_lock-circle-open"></i>
                                </label>
                                <input asp-for=Password class="input-field" type="password" placeholder="رمز عبور خود را وارد نمایید">
                                <span class="text-danger" asp-validation-for=Password></span>
                            </div>
                            <div class="form-account-row form-account-submit">
                                <div class="parent-btn">
                                    <button class="dk-btn dk-btn-info">
                                        ورود
                                        <i class="fa fa-sign-in"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <div class="account-box-content">
                        <div class="parent-btn">
                            <a class="dk-btn dk-btn-info" href="@Url.Action("MobileInput","Login")">
                                ورود با کد یکبار مصرف
                                <i class="fa fa-sign-in"></i>
                            </a>
                        </div>
                    </div>
                    <div class="account-box-footer">
                        <span>کاربر جدید هستید؟</span>
                        <a href="@Url.Action("MobileInput","Register")" class="btn-link-border">ثبت نام</a>
                    </div>
                   
                </div>
            </div>
        </div>
    </div>
</div>

