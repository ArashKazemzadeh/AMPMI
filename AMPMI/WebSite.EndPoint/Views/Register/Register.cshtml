@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="wrapper default">
    <div class=" container">
        <div class="row">
            <div class="main-content col-12 col-md-7 col-lg-5 mx-auto">
                <div class="account-box pb-2">
                    <div class="account-box-title text-right">ثبت نام</div>
                    <div class="account-box-content">
                        <form asp-action="Index" class="form-account">
                            <div class="form-account-title">شماره موبایل</div>
                            <div class="form-account-row">
                                <label class="input-label"><i class="now-ui-icons users_single-02"></i></label>
                                <input class="input-field" name="mobile" value="@ViewData["mobile"]" type="text">
                            </div>
                            <div class="form-account-title">نام شرکت</div>
                            <div class="form-account-row">
                                <label class="input-label">
                                    <i class="fa fa-building" aria-hidden="true"></i>
                                </label>
                                <input name="CompanyName" class="input-field" type="text">
                            </div>
                            <div class="form-account-title">نام مدیر</div>
                            <div class="form-account-row">
                                <label class="input-label">
                                    <i class="fa fa-briefcase" aria-hidden="true"></i>
                                </label>
                                <input name="ManagerName" class="input-field" type="text">
                            </div>
                            <div class="form-account-title">ایمیل</div>
                            <div class="form-account-row">
                                <label class="input-label">
                                    <i class="fa fa-envelope-o" aria-hidden="true"></i>
                                </label>
                                <input name="Email" class="input-field" type="email">
                            </div>
                            <div class="form-account-title">آدرس</div>
                            <div class="form-account-row">
                                <label class="input-label">
                                    <i class="fa fa-map-marker" aria-hidden="true"></i>
                                </label>
                                <input name="Address" class="input-field" type="text">
                            </div>
                            <div class="form-account-title">رمز عبور</div>
                            <div class="form-account-row">
                                <label class="input-label">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                </label>
                                <input name="Password" class="input-field" type="password">
                            </div>
                            <div class="form-account-title">تکرار رمز عبور</div>
                            <div class="form-account-row">
                                <label class="input-label">
                                    <i class="fa fa-lock" aria-hidden="true"></i>
                                </label>
                                <input name="PasswordConfirm" class="input-field" type="password">
                            </div>
                            <div class="form-account-row form-account-submit">
                                <div class="parent-btn">
                                    <button class="dk-btn dk-btn-info">
                                        ثبت نام
                                        <i class="fa fa-sign-in"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>