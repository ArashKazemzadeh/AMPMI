@model WebSite.EndPoint.Models.CompanyViewModel.CompanyDetailVM
@{
    ViewData["Title"] = "CompanyDetail";
}
<style>
    .card {
        background-color: white;
        border-radius: 10px;
        margin: 10px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
    .companyLogo{
        border-radius: 50%;
        background-color: #003C61;
        width: 100px;
        height: 100px;
        margin-right: 5px;
        margin: 5px auto
    }
    .companyInfo {
        background-color: #ECECEC;
        padding: 10px;
    }
    .aboutCompany{
        text-align: justify;
        text-justify: inter-word
    }
    .searchProduct{
        width: 100%;
        border: 0;

    }
    input::placeholder{
        color: #C3C3C3;
        text-align:center;
    }
    input:focus {
        outline: none;
    }
    .btnSearch {
        background-color: #00A2FF;
        width: 100%;
        align-items:center;
    }
    .productCard{
        background-color: #003C61;
        z-index:1;
        height: 320px;
        position: relative;
    }
    .productDetail{
        color: #FFFFFF;
    }
    .productDetailLoc {
        bottom:5px;
        position: absolute;
        left:50%;
        transform: translate(-50%, -50%);
        margin: 0 auto;
    }
    .productCard1 {
        background-color: #FFFFFF;
        z-index: 2;
        border-radius: 10px;
        width:100%;
        height: 265px;
        position: relative;
    }
    .productName {
        color: #000000;
    }
    .productCard2 {
        background-color: #003C61;
        z-index: 3;
        border-radius: 10px;
        margin: 0 auto;
        height: 160px;
        width: 160px;
        position: relative;
        margin-top:15px;
    }
</style>
<div class="body-default container">
    <!-- Company Section -->
    <section style="padding:0;">
        <div style="justify-content: center;
                    align-items: center;
                    display: flex">
            @*//foreach data here*@
            <div class="col-md-8 my-2 card">
                <div class="row mt-2">
                    <div class="col-md-3 my-2" style="text-align:center">
                        <img src="~/blog/blog-1.jpg" 
                             class="img-fluid companyLogo">
                        <p>@Model.Name</p>
                    </div>
                    <div class="col-md-8 my-2">
                        <div class="companyInfo">
                            <i class="fa fa-user fa-lg"></i>
                            <span></span><br />
                            <i class="fa fa-phone fa-lg"></i>
                            <span></span><br />
                            <i class="fa fa-map"></i>
                            <span></span><br />
                            <i class="fa fa-envelope"></i>
                            <span></span><br />
                            <i class="fa fa-globe fa-lg"></i>
                            <span></span><br />
                            <i class="fa fa-star fa-lg"></i>
                            <span></span><br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="card">
            <div class="row mt-2">
                <div class="col-md-2 my-2 " style="text-align:center">
                    <p style="color:#003C61">درباره شرکت:</p>
                </div>
                <div class="col-md-9 my-2">
                    <p class="aboutCompany">
                        @Model.About
                        هیئت مدیره انجمن تولیدکنندگان قطعات مجموعه‌های موتورسیکلت و دوچرخه با دعوت از کلیه فعالان صنعتی
                        در این بخش جهت حضور و مشارکت فعال در ساماندهی انجمن و تشکیل کارگروه‌های لازم و عقد قراردادهای تأمین قطعات
                        با سازندگان موتورسیکلت و دورچرخه، تقاضای استفده موثر و حداکثری از شرایط بسیار مساعد پیش رو را
                        درخواست می‌نماید.
                    </p>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 my-2">
                <div class="card" style="height:300px;">
                    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner">
                            @if (Model.CompanyPictures != null)
                            {
                                foreach (var item in Model.CompanyPictures)
                                {
                                    <div class="carousel-item active">
                                        <img src="@item" class="d-block w-100" alt="...">
                                    </div>
                                }
                            }
                            <div class="carousel-item active">
                                <img src="..." class="d-block w-100" alt="...">
                            </div>
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 my-2">
                <div class="card" style="height:300px;">
                    <video>
                        <source type="video/mp4" />
                    </video>
                </div>
            </div>
        </div>
    </section>
    <!-- Product Section -->
    <section style="padding:0">
        <div class="card" style="height:30px; text-align:center">
            <p>محصولات</p>
        </div>
        <div class="row">
            @* foreach products here *@
            <div class="col-md-6">
                <div class="row mt-2">
                    <div class="col-md-8 my-2">
                        <input class="card searchProduct p-1" placeholder="نام محصول را وارد کنید:"/>
                    </div>
                    <div class="col-md-4 my-2">
                        <button class="card btnSearch">
                            جستجو
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3 my-2">
                <div class="card productCard">
                    <a href="#" class="productDetailLoc"><span class="productDetail">اطلاعات محصول</span></a>
                    <div class="productCard1">
                        <a class="productDetailLoc" style="width:70%"><span class="productName">راهنمای چراغ عقب هوندا تولیدی شرکت حدید روان</span></a>
                        <div class="productCard2">
                            <img/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 my-2">
                <div class="card productCard">
                    <a href="#" class="productDetailLoc"><span class="productDetail">اطلاعات محصول</span></a>
                    <div class="productCard1">
                        <a class="productDetailLoc" style="width:70%"><span class="productName">راهنمای چراغ عقب هوندا تولیدی شرکت حدید روان</span></a>
                        <div class="productCard2">
                            <img />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 my-2">
                <div class="card productCard">
                    <a href="#" class="productDetailLoc"><span class="productDetail">اطلاعات محصول</span></a>
                    <div class="productCard1">
                        <a class="productDetailLoc" style="width:70%"><span class="productName">راهنمای چراغ عقب هوندا تولیدی شرکت حدید روان</span></a>
                        <div class="productCard2">
                            <img />
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-3 my-2">
                <div class="card productCard">
                    <a href="#" class="productDetailLoc"><span class="productDetail">اطلاعات محصول</span></a>
                    <div class="productCard1">
                        <a class="productDetailLoc" style="width:70%"><span class="productName">راهنمای چراغ عقب هوندا تولیدی شرکت حدید روان</span></a>
                        <div class="productCard2">
                            <img />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>