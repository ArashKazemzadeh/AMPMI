@model List<WebSite.EndPoint.Models.CompanyViewModel.CompanyVM>
@{
    ViewData["Title"] = "CompanyList";
    ViewData["SelectedHome"] = "Company";
}

<div class="body-default container">
    <div class="row">
        <form asp-action="Search" asp-controller="Company">
            <div class="row">
                <div class="col-md-10 mb-sm-3">
                    <input name="name" class="input-text searchSeller" placeholder="جستجوی تولیدکنندگان" type="text"/>

                </div>
                <div class="col-md-2">
                    <button class="btn-submit btnUpload width100" type="submit">اعمال</button>
                </div>
            </div>
        </form>
    </div>
    <div class="row mt-2">
        @foreach(var item in Model){
            <div class="col-md-6 my-2">
                <a href="@Url.Action("CompanyDetail","Company", new {companyId=item.Id})">
                    <div class="row mt-2 cardList">
                        <div class="col-md-3 my-2 center-align">
                            <div class="companyLogo @(!string.IsNullOrEmpty(item.LogoRout) ? "hasImg":"")">
                                @if(!string.IsNullOrEmpty(item.LogoRout)){
                                    <img class="img img-fluid companyLogo" src="@item.LogoRout" />
                                }else{
                                    <div class="companyLogo">
                                    </div>
                                }
                            </div>
                            <br/>
                            <p>@item.Name</p>
                        </div>
                        <div class="col-md-9 my-2">
                            <div class="companyInfo">
                                <i class="fa fa-user fa-lg"></i><span class="p-2">@item.ManagerName</span>
                                <br />
                                <i class="fa fa-phone fa-lg"></i><span class="p-2">@item.Tel</span>
                                <br />
                                <i class="fa fa-map"></i><span class="p-2">@item.Address</span>
                                <br />
                                <i class="fa fa-envelope"></i><span class="p-2">@item.Email</span>
                                <br />
                                <i class="fa fa-globe fa-lg"></i><span class="p-2">@item.Website</span>
                                <br />
                                <i class="fa fa-star fa-lg"></i><span class="p-2">@item.Information</span>
                                <br />
                            </div>
                        </div>
                    </div>
                </a>
            </div>

        }
    </div>
</div>