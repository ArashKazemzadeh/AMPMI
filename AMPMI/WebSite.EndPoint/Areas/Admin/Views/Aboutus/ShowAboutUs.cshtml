@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}


<div class="container-fluid">
    <h3>درباره ما</h3>

    @if (TempData["Message"] != null)
    {
        <div class="alert alert-info">
            @TempData["Message"]
        </div>
    }

    <form method="post" action="@Url.Action("SaveAboutUs", "AboutUs")">
        @Html.AntiForgeryToken()
        <div class="row">
            <button type="submit" class="btn"><img class="img-Icon" src="~/images/diskette copy.png" /></button>
        </div>
        <div class="row">
            <textarea id="editAboutUs" name="content" style="display: none;">@Html.Raw(ViewBag.AboutUsContent)</textarea>
        </div>
    </form>
</div>
@section Scripts
{
    <script>
      
        var editor = new RichTextEditor("#editAboutUs");

        $("form").on("submit", function () {
            var content = editor.getHTML();
            $("#editAboutUs").val(content);
        });
    </script>
}