@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="contaienr">
    <div>
        <a href="#" id="new"> <img class="img-Icon" src="~/images/addition copy.png" /> </a>
        <a href="#" id="save"><img class="img-Icon" src="~/images/diskette copy.png" /></a>
        <a href="#" id="cancle"><img class="img-Icon" src="~/images/cancel.png" /></a>
    </div>
    <div hidden id="newForm" style="margin-top:20px;">
        <form>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label input-Label">نام گروه اصلی:</label>
                <div class="col-sm-4">
                    <input type="text" class="form-control input-text">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label input-Label" style="padding:10px;">تصویر گروه اصلی:</label>
                <div class="col-sm-2">
                    <button class="btn btn-submit btnUpload" onclick="getfile()">بارگذاری تصویر</button>
                    <input id="getFile" style="display:none" class="form-control-file" type="file" name="img" accept="image/*">
                </div>
                <div class="col-sm-2 ShowPic"></div>
            </div>
        </form>
    </div>
    <div>
        <table id="myTable" class="display tbStyle">
            <thead>
                <tr>
                    <th style="text-align:center">ردیف</th>
                    <th style="text-align:center">نام گروه اصلی</th>
                    <th style="text-align:center">ویرایش</th>
                    <th style="text-align:center">حذف</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td style="text-align:center">1</td>
                    <td>گروه 1</td>
                    
                    <td style="text-align:center"><a href="#"><img class="img-Icon" src="~/images/editing.png" /></a></td>
                    <td style="text-align:center"><a href="#"><img class="img-Icon" src="~/images/recycle.png" /></a></td>
                </tr>
                <tr>
                    <td style="text-align:center">2</td>
                    <td>گروه 2</td>
                    <td style="text-align:center"><a href="#"><img class="img-Icon" src="~/images/editing.png" /></a></td>
                    <td style="text-align:center"><a href="#"><img class="img-Icon" src="~/images/recycle.png" /></a></td>
                </tr>
            </tbody>
        </table>
    </div>
</div>
@section Scripts
{
    <script>
          document.querySelector('#myTable')
            .setAttribute('dir', 'rtl'); // Demo only

        new DataTable('#myTable');

        $("#new").click(function(){
            $("#newForm").show();
        });

        function HideForm()
        {
            $("#newForm").hide();
        }

        $("#save").click(function(){
            HideForm();
        });

        $("#cancle").click(function(){
            HideForm();
        });

        function getfile () {
            document.querySelector('#getFile').click();
        }

    </script>


}