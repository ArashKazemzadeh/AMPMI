@model List<WebSite.EndPoint.Areas.Admin.Models.Notification.NotificationReadByAdminVM>

@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div class="container-fluid">
    <div>
        @if (ViewData["Message"] is not null)
        {
            <p style="color : red">@ViewData["Message"]?.ToString()</p>
        }
    </div>
    <div class="row">
        <div class="col-md-12">
            <a id="new" href="#"> <img class="img-Icon" src="~/images/addition copy.png" /></a>
            <a id="save" href="#"> <img class="img-Icon" src="~/images/diskette copy.png" /></a>
            <a id="cancle" href="#"><img class="img-Icon" src="~/images/cancel.png" /></a>
            <!-- Form to create a new notification -->
            <form id="newForm" asp-area="Admin" asp-controller="Notification" asp-action="Create" method="post" hidden>
                <div class="form-group">
                    <label for="Subject" style="float:right;">موضوع اعلان:</label>
                    <input type="text" id="Subject" name="subject" class="form-control input-text" placeholder="موضوع متن را وارد کنید" />
                </div>
                <div class="form-group">
                    <label for="Description" style="float:right;">متن اعلان:</label>
                    <textarea id="Description" name="description" class="form-control input-text" rows="5" placeholder="متن متن را وارد کنید"></textarea>
                </div>
            </form>
        </div>
        <div>
            <table id="notiftable" class="display">
                <thead>
                    <tr>
                        <th style="text-align:center">ردیف</th>
                        <th style="text-align:center">موضوع اعلان</th>
                        <th style="text-align:center">متن اعلان</th>
                        <th style="text-align:center">تاریخ</th>
                        <th style="text-align:center">حذف</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        long rowIndex = 1;
                    }
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@rowIndex</td>
                            <td>@item.Subject</td>
                            <td>@item.Description</td>
                            <td>@item.CreateAt</td>
                            <td>
                                <form asp-area="Admin" asp-controller="Notification" asp-action="Delete" method="post">
                                    <input type="hidden" asp-for="@item.Id" />
                                    <button type="submit" class="btn">
                                        <img class="img-Icon" src="~/images/recycle.png" />
                                    </button>
                                </form>
                            </td>
                        </tr>
                        rowIndex++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts
{
    <script>
        document.querySelector('#notiftable')
            .setAttribute('dir', 'rtl');
        new DataTable('#notiftable');

        $("#new").click(function(){
            $("#newForm").show();
        });

        function HideForm()
        {
            $("#newForm").hide();
        }

        $("#save").click(function(){
            HideForm();
        });

        $("#cancle").click(function(){
            HideForm();
        });
         $("#save").click(function (event) {
            event.preventDefault();
            $("#newForm").submit();
        });


        $("#cancle").click(function (event) {
            event.preventDefault();
            $("#newForm").hide();
        });
    </script>


}