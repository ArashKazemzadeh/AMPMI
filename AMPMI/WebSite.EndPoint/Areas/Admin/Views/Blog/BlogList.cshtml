@using AQS_Application.Dtos.BaseServiceDto.BlogDtos
@model List<BlogReadAdminDto>
@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
<div class="container-fluid">
    <div class="pageName">
        <span class="textPage">لیست اخبار انجمن</span>
    </div>
    <div class="row">
        <a href="@Url.Action("CreateBlog","Blog")" id="new"> <img class="img-Icon" src="~/images/addition copy.png" /> </a>
    </div>
    <div class="row">
        <table id="myTable" class="display tbStyle">
            <thead>
                <tr>
                    <th style="text-align:center">ردیف</th>
                    <th style="text-align:center">موضوع خبر</th>
                    <th style="text-align:center">متن خبر</th>
                    <th style="text-align:center">ویرایش</th>
                    <th style="text-align:center">حذف</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int row = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="text-align:center">@row</td>
                        <td>@item.Subject</td>
                        <td>@item.Description</td>
                        <td style="text-align:center">
                            <a href="@Url.Action("EditBLog", "Blog", new { area = "Admin", id = item.Id })">
                                <img class="img-Icon" src="~/images/editing.png" />
                            </a>
                        </td>
                        <td style="text-align:center">
                            <a href="@Url.Action("DeleteBLog", "Blog", new { area = "Admin", id = item.Id })">
                                <img class="img-Icon" src="~/images/recycle.png" />
                            </a>
                        </td>
                    </tr>
                    row++;
                }
            </tbody>

        </table>
    </div>
</div>
@section Scripts
{
    <script>

          document.querySelector('#myTable')
            .setAttribute('dir', 'rtl'); // Demo only

        // new DataTable('#myTable');
                    $('#myTable').DataTable({
                language: {
                    "emptyTable": "هیچ داده‌ای در جدول وجود ندارد",
                    "info": "نمایش _START_ تا _END_ از _TOTAL_ رکورد",
                    "infoEmpty": "نمایش 0 تا 0 از 0 رکورد",
                    "infoFiltered": "(فیلتر شده از _MAX_ رکورد)",
                    "lengthMenu": "نمایش _MENU_ رکورد در هر صفحه",
                    "loadingRecords": "در حال بارگذاری...",
                    "processing": "در حال پردازش...",
                    "search": "جستجو:",
                    "zeroRecords": "رکوردی با این مشخصات پیدا نشد",
                    "paginate": {
                        "first": "اولین",
                        "last": "آخرین",
                        "next": "بعدی",
                        "previous": "قبلی"
                    },
                    "aria": {
                        "sortAscending": ": فعال‌سازی مرتب‌سازی صعودی",
                        "sortDescending": ": فعال‌سازی مرتب‌سازی نزولی"
                    }
                }
            });

    </script>
}