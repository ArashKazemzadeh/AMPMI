@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
<div class="container-fluid">
    <form>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">گروه اصلی</label>
                    <div class="col-sm-9">
                        <select class="form-control">
                            <option selected>گروه اصلی را انتخاب کنید</option>
                            <option>گروه 1</option>
                            <option>گروه 2</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">گروه فرعی</label>
                    <div class="col-sm-9">
                        <select class="form-control">
                            <option selected>گروه فرعی را انتخاب کنید</option>
                            <option>گروه 1</option>
                            <option>گروه 2</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">نام محصول</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">توضیحات</label>
                    <div class="col-sm-9">
                        <textarea class="form-control"></textarea>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label">انتخاب تصویر</label>
                    <div class="col-sm-9">
                        <input class="form-control-file" type="file" name="img" accept="image/*">
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <button class="btn btn-submit" id="save" type="submit">ذخیره</button>
            <a href="@Url.Action("ProductList","Product")" class="btn btn-danger" id="cancle" type="button">انصراف</a>
        </div>
    </form>
</div>