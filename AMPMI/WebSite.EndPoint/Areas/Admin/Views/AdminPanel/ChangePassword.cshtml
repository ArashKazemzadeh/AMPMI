@{
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}
<div class="container-fluid">
    <div class="pageName">
        <span class="textPage">تغییر رمز عبور</span>
    </div>
    @if (ViewData["error"] is not null)
    {
        <div class="row">
            <p class="text-danger border-5">@ViewData["error"].ToString()</p>
        </div>
    }
    <div>
        <a href="#" id="save"><img class="img-Icon" src="~/images/diskette copy.png" /></a>
    </div>
    <div>
        <form>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label input-Label">رمز عبور قبلی</label>
                <div class="col-sm-4">
                    <input type="password" class="input-text">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label input-Label">رمز عبور جدید</label>
                <div class="col-sm-4">
                    <input type="password" class="input-text">
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-2 col-form-label input-Label">تکرار رمز عبور جدید</label>
                <div class="col-sm-4">
                    <input type="password" class="input-text">
                </div>
            </div>
            <button class="btn btn-primary" type="submit">ذخیره</button>
        </form>
    </div>
</div>

@section Scripts
                    {
    <script>
        $("#save").click(function(event){
            event.preventDefault();
            $("#saveForm").submit();
        });
    </script>
}