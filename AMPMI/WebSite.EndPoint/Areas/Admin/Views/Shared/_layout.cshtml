@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html dir="rtl" lang="fa-IR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>داشبورد</title>
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <link href="~/css/datatables.min.css" rel="stylesheet" />

    <link href="~/css/bootstrap-theme.css" rel="stylesheet" />

    <link href="~/css/rtl.css" rel="stylesheet" />

    <link href="~/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Ionicons -->
    <link href="~/css/ionicons.min.css" rel="stylesheet" />
    <!-- Theme style -->
    <link href="~/css/AdminLTE.css" rel="stylesheet" />
    <!-- AdminLTE Skins. We have chosen the skin-blue for this starter
       page. However, you can choose any other skin. Make sure you
       apply the skin class to the body tag so the changes take effect. -->
     <link href="~/css/skin-blue.min.css" rel="stylesheet" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
    <!-- customize adminlte -->
    <link href="~/css/customize-adminlte.css" rel="stylesheet" />
    <link href="~/css/CustomDashboard.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link rel="icon" href="~/images/cropped-fav-32x32.png" sizes="32x32" />
    <link rel="icon" href="~/images/cropped-fav-192x192.png" sizes="192x192" />
    <link rel="apple-touch-icon" href="~/images/cropped-fav-180x180.png" />
    <meta name="msapplication-TileImage" content="~/images/cropped-fav-270x270.png" />
    <link href="~/css/rte_theme_default.css" rel="stylesheet" />
    @await RenderSectionAsync("CSS", required: false)
    <style>

        body {
            min-height: 100vh !important;
        }

        .wrapper {
            min-height: 100vh !important;
        }

    </style>
</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper" style="background-color:#EEEEEE">

        <!-- Main Header -->
        <header class="main-header">
            <!-- Header Navbar: style can be found in header.less -->
            <nav class="navbar navbar-static-top">
                <div class="row nav-cls">
                    <div class="col-md-4" style="display:inline-block">
                        <ul class="nav navbar-nav">
                            <!-- Back to home page -->
                            <li class="dropdown notifications-menu" style="display:inline-block">
                                <a href="/" class="dropdown-toggle">
                                    <img class="nav-Icon" src="~/images/home.png" />
                                </a>
                            </li>
                            <!-- Notifications: style can be found in dropdown.less -->
                            <!-- Show Date -->
                            <li class="dropdown notifications-menu" style="display:inline-block">
                                @{
                                    var nowDatePersian = DateTime.Now.ToPersianDateWithFormat();
                                }
                                <p class="nav-Date">  @nowDatePersian </p>
                            </li>
                        </ul>
                    </div>
                    <!-- Hello to user -->
                    <div class="col-md-6 welcome hide-on-sm">
                        <p class="nav-welcome">به انجمن قطعه‌سازان موتور سیکلت خوش آمدید</p>
                    </div>
                    <!-- Welcome text -->
                    <div class="col-md-2" style="display:inline-block; float:left;">
                        <div class="nav-companyName">
                            <img class="nav-NameIcon" src="~/images/user.png" />
                            <span>ادمین سایت</span>
                        </div>
                    </div>
                </div>
            </nav>
        </header>
        <!-- right side column. contains the logo and sidebar -->
        <div class="container-fluid">
            <div class="col-md-3 menu">
                <div class="profile-Pic">
                    <button class="profile-Pic-btn">
                        <img class="profile-Pic-img" src="~/images/add user.png"/>
                    </button>
                </div>
                <!-- sidebar: style can be found in sidebar.less -->
                <section class="sidebar">
                    <!-- Sidebar Menu -->
                    <ul class="sidebar-menu menu-Item" data-widget="tree">
                        <!-- User Profile -->
                        <li class="@(ViewData["SelectedAdmin"]=="User"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller=User asp-action=UserList>
                                <img class="nav-NameIcon" src="~/images/user.png"/>
                                <span class="menu-Item-Text">کاربران</span>
                            </a>
                        </li>
                        <!-- Change Password -->
                        <li class="@(ViewData["SelectedAdmin"]=="ChangePassword"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller=AdminPanel asp-action=ChangePassword>
                                <img class="nav-NameIcon" src="~/images/lock copy.png"/>
                                <span class="menu-Item-Text">تغییر رمز عبور</span>
                            </a>
                        </li>
                        <li class="@(ViewData["SelectedAdmin"]=="Notif"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller=Notification asp-action=ShowPage>
                                <img class="nav-NameIcon" src="~/images/notification copy.png"/>
                                <span class="menu-Item-Text">اعلان‌ها</span>
                            </a>
                        </li>
                        <li class="@(ViewData["SelectedAdmin"]=="Category"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller=Category asp-action=CategoryList>
                                <img class="nav-NameIcon" src="~/images/product copy.png"/>
                                <span class="menu-Item-Text">تعریف گروه اصلی محصولات</span>
                            </a>
                        </li>
                        <li class="@(ViewData["SelectedAdmin"]=="SubCategory"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller="SubCategory" asp-action="SubCategoryList">
                                <img class="nav-NameIcon" src="~/images/product copy.png"/>
                                <span class="menu-Item-Text">تعریف گروه فرعی محصولات</span>
                            </a>
                        </li>
                        <li class="@(ViewData["SelectedAdmin"]=="Product"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller="Product" asp-action="ProductList">
                                <img class="nav-NameIcon" src="~/images/product copy.png"/>
                                <span class="menu-Item-Text">تعریف محصولات</span>
                            </a>
                        </li>
                        <li class="@(ViewData["SelectedAdmin"]=="NotConfirmProduct"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller="Product" asp-action="NotConfirmedProductList">
                                <img class="nav-NameIcon" src="~/images/product copy.png"/>
                                <span class="menu-Item-Text">تأیید محصولات بارگذاری شده</span>
                            </a>
                        </li>
                        <li class="@(ViewData["SelectedAdmin"]=="Blog"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller="Blog" asp-action="BlogList">
                                <img class="nav-NameIcon" src="~/images/news copy.png"/>
                                <span class="menu-Item-Text">اخبار انجمن</span>
                            </a>
                        </li>
                        <li class="@(ViewData["SelectedAdmin"]=="Banner"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller="Banner" asp-action="BannerList">
                                <img class="nav-NameIcon" src="~/images/laptop copy.png"/>
                                <span class="menu-Item-Text">بنر تبلیغاتی</span>
                            </a>
                        </li>
                        <li class="@(ViewData["SelectedAdmin"]=="AboutUs"?"activeAreasMenu":"") dropdown notifications-menu Dashboard-hover">
                            <a asp-area="Admin" asp-controller="Aboutus" asp-action="ShowAboutUs">
                                <img class="nav-NameIcon" src="~/images/notification copy.png"/>
                                <span class="menu-Item-Text">درباره ما</span>
                            </a>
                        </li>
                    </ul>
                    <!-- /.sidebar-menu -->
                </section>
                <!-- /.sidebar -->
            </div>

            <!-- Content Wrapper. Contains page content -->
            <div class="col-md-8 menu">
                <!-- Content Header (Page header) -->
                <section class="content container-fluid">
                    @RenderBody()


                </section>
            </div>
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer text-left" style="background-color:#EEEEEE">
        </footer>
        <!-- /.control-sidebar -->
        <!-- Add the sidebar's background. This div must be placed
        immediately after the control sidebar -->
        <div class="control-sidebar-bg"></div>
    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED JS SCRIPTS -->
    <script src="~/js/admin/jquery.min.js"></script>
    <script src="~/js/datatables.min.js"></script>
    <script src="~/js/admin/bootstrap.min.js"></script>
    <script src="~/js/adminlte.min.js"></script>
    <!-- RichTextEditor -->
    <script src="~/js/rte.js"></script>
    <script src="~/js/all_plugins.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>

</html>