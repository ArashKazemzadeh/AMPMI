                <!-- Sidebar Menu -->
                <ul class="sidebar-menu" data-widget="tree" style="margin-top:20px; margin-right:10px">
                    <!-- User Profile -->
                    <li class="dropdown notifications-menu Dashboard-hover" style="margin-bottom:10px">
                        <a href="#">
                        <img src="~/images/user.png" style="width:20px ; height:20px" />
                            <span style="padding-right:10px; color:#000000">پروفایل کاربری</span>
                        </a>
                    </li>
                    <!-- Change Password -->
                    <li class="dropdown notifications-menu Dashboard-hover" style="margin-bottom:10px">
                        <a href="#">
                            <img src="~/images/user.png" style="width:20px ; height:20px" />
                            <span style="padding-right:10px; color:#000000">تغییر رمز عبور</span>
                        </a>
                    </li>
                    <li class="dropdown notifications-menu Dashboard-hover" style="margin-bottom:10px">
                        <a href="#">
                            <img src="~/images/image copy.png" style="width:20px ; height:20px" />
                            <span style="padding-right:10px; color:#000000">گالری تصاویر</span>
                        </a>
                    </li>
                    <li class="dropdown notifications-menu Dashboard-hover" style="margin-bottom:10px">
                        <a href="#">
                            <img src="~/images/clapperboard copy.png" style="width:20px ; height:20px" />
                            <span style="padding-right:10px; color:#000000">تیزر تبلیغاتی</span>
                        </a>
                    </li>
                    <li class="dropdown notifications-menu Dashboard-hover" style="margin-bottom:10px">
                        <a href="#">
                            <img src="~/images/product copy.png" style="width:20px ; height:20px" />
                            <span style="padding-right:10px; color:#000000">محصولات</span>
                        </a>
                    </li>
                    <li class="dropdown notifications-menu Dashboard-hover" style="margin-bottom:10px">
                        <a href="#">
                            <img src="~/images/notification copy.png" style="width:20px ; height:20px" />
                            <span style="padding-right:10px; color:#000000">اعلان‌ها</span>
                        </a>
                    </li>
                </ul>
                <!-- /.sidebar-menu -->
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper" 
             style="float:left; 
                    width:75%; 
                    margin-top:25px; 
                    background-color:white; 
                    border-radius:25px;
                    margin-left:25px">
            <!-- Content Header (Page header) -->
            <section class="content container-fluid">
                @RenderBody()


            </section>
        </div>
        </div>
        <!-- /.content-wrapper -->
        <!-- Main Footer -->
        <footer class="main-footer text-left" style="background-color:#EEEEEE">
            <strong>
