@model WebSite.EndPoint.Areas.Company.Models.Product.ProductVM
@{
    Layout = "~/Areas/Company/Views/Shared/_layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <a href="@Url.Action("EditProduct","Product",new {area="Company"})" id="save"><img class="img-Icon" src="~/images/diskette copy.png" /></a>
        <a href="@Url.Action("ProductList","Product")" id="cancle"><img class="img-Icon" src="~/images/cancel.png" /></a>
    </div>
    <form>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label input-Label">گروه اصلی:</label>
                    <div class="col-sm-9">
                        <select class="input-text">
                            <option selected>گروه اصلی را انتخاب کنید</option>
                            <option>گروه 1</option>
                            <option>گروه 2</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label input-Label">گروه فرعی:</label>
                    <div class="col-sm-9">
                        <select class="input-text">
                            @foreach(var item in Model.SubCategories){
                                if(Model.SubCategoryId == item.Id){
                                    <option selected value="@item.Id">@item.Name</option>
                                }
                                else
                                {
                                    <option value="@item.Id">@item.Name</option>
                                }
                            }
                            <option selected>گروه فرعی را انتخاب کنید</option>
                            <option>گروه 1</option>
                            <option>گروه 2</option>
                        </select>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label input-Label">نام محصول:</label>
                    <div class="col-sm-9">
                        <input type="text" class="input-text">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label input-Label">توضیحات:</label>
                    <div class="col-sm-9">
                        <textarea class="input-text"></textarea>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-3 col-form-label input-Label">انتخاب تصویر:</label>
                    <div class="col-sm-5 upBtn">
                        <button class="btn-submit btnUpload" onclick="getfile()">بارگذاری تصویر</button>
                        <input id="getFile" style="display:none" class="form-control-file" type="file" name="img" accept="image/*">
                    </div>
                    <div class="col-sm-2 ShowPic"></div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts
{
    <script>

        function getfile () {
            document.querySelector('#getFile').click();
        }

    </script>

}