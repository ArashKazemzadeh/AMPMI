@model WebSite.EndPoint.Models.ErrorViewModel

@{
    Layout = null;
    ViewData["Title"] = "خطا";
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>خطا - @Model.StatusCode</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            background: linear-gradient(to right, #004e92, #000428);
            color: #fff;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            text-align: center;
        }

        .error-container {
            background: rgba(255, 255, 255, 0.1);
            padding: 2rem;
            border-radius: 15px;
            box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.3);
            backdrop-filter: blur(10px);
        }

        .btn-custom {
            background: #00c6ff;
            color: #fff;
            border: none;
            padding: 10px 20px;
            border-radius: 25px;
            transition: 0.3s;
        }


        body {
            font-family: 'iranyekanwebbold(fanum)';
            src: url('fonts\iranyekan\ttf\iranyekanwebbold(fanum).ttf') format('truetype');
        }

        .btn-custom:hover {
            background: #0072ff;
        }
    </style>
</head>
<body>
    <div class="error-container">
        <h1>مشکلی پیش آمده!</h1>
        <p class="fs-4">کد خطا: <strong>@Model.StatusCode</strong></p>

        @if (Model.StatusCode == 404)
        {
            <p class="fs-5">صفحه‌ای که به دنبال آن هستید پیدا نشد.</p>
        }
        else if (Model.StatusCode == 500)
        {
            <p class="fs-5">خطای سرور رخ داده است. لطفاً بعداً امتحان کنید.</p>
        }
        else
        {
            <p class="fs-5">لطفاً با پشتیبانی تماس بگیرید.</p>
        }

        <a href="/" class="btn btn-custom mt-3">بازگشت به صفحه اصلی</a>
    </div>
</body>
</html>
